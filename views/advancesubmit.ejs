  <script>

    function submit1(){
      var data1 = new FormData();
      var ty=$('#filedata').prop('files')[0];
      data1.append('file',ty );
     
      $.ajax({
          
          type: 'POST',               
          processData: false, // important
          contentType: false, // important
          data: data1,
          url: 'file/uploads',
          dataType : 'script',  
          success: function(data){
           
            var image = JSON.parse(data)[0].filename;
          $('#profileimg0').val(image);
          }
          
      }); 
};

function passport(){
      var data1 = new FormData();
      var ty=$('#passportid').prop('files')[0];
      data1.append('file',ty );
      $.ajax({
          type: 'POST',               
          processData: false, // important
          contentType: false, // important
          data: data1,
          url: 'file/uploads',
          dataType : 'script',  
          success: function(data){
            
            var image = JSON.parse(data)[0].filename;
          $('#passportimg0').val(image);
          }
      }); 
};

