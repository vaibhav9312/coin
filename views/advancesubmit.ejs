<section>
<div class="container-fluid advancesubmit">
 
  <div class="col-md-12">
      <form class="form-signin" method="post" action="/maindata">
      <h1 class="advertise submitheading">Submit Entry</h1>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Your Name</b></h4></div>
        <div class="infovalue inline token"><%=name%></div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Your E-mail</b></h4></div>
        <div class="infovalue inline token"><%=email%></div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Event Name</b></h4></div>
        <div class="infovalue inline token"><%=event%></div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Project Website<span class="asterisk">*</span></b></h4></div>
        <div class="infovalue inline token"><input type="text" name="project_website" style="width:300px"><br>e.g.: http://www.google.com (please include http:// or https://)</div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Dates not defined yet - TBA </b></h4></div>
        <div class="infovalue inline token"><input id="chek" onchange="checkbox()" name="tba" type="checkbox"></div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Start<span class="asterisk">*</span></b></h4></div>
        <div class="infovalue inline token"><input type="date" id="start" name="startdate" style="width:300px"><span style="padding-left:10px;"><i>Please set time in UTC</i></span></div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>End<span class="asterisk">*</span></b></h4></div>
        <div class="infovalue inline token"><input type="date" id="end" name="enddate" style="width:300px"><span style="padding-left:10px;"><i>Please set time in UTC</i></span></div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Project Category<span class="asterisk">*</span></b></h4></div>
        <div class="infovalue inline token">
        <select style="width:300px" name="pcategory">
        <option>Finance</option>
        <option>Mining</option>
        <option>Data Analyst</option>
        <option>Gambling</option>
        </select></div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Project Type<span class="asterisk">*</span></b></h4></div>
        <div class="infovalue inline token">
        <select style="width:300px" name="ptype">
        <option>Blockchain</option>
        <option>Asset/Token</option>
       
        </select></div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Platform</b></h4></div>
        <div class="infovalue inline token"><select class="form-control selectbox" style="width:300px;margin-bottom:0px;"></select></div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Token/Coin Name<span class="asterisk">*</span></b></h4></div>
        <div class="infovalue inline token"><input type="text" name="coinname" style="width:300px"><br>Maximum 255 charactrers</div>
      </div>

      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Symbol<span class="asterisk">*</span></b></h4></div>
        <div class="infovalue inline token"><input type="text" name="symbol" style="width:300px"><span style="padding-left:10px;">Maximum 10 charactrers</span></div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Total Supply<span class="asterisk">*</span></b></h4></div>
        <div class="infovalue inline token"><input type="text" name="tsupply" style="width:300px"><span style="padding-left:10px;">e.g.: 100000000.99</span></div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Link to logo<span class="asterisk">*</span></b></h4></div>
        <div class="infovalue inline token"><input type="text" style="width:300px"><br>Maximum 255 charactrers<br><input type="file" id="logoimg" onchange="logoimg()" accept="image" /></div>
        <input type="text" style="display:none" id="logopic" name="logopic"/>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Link to Whitepaper</b></h4></div>
        <div class="infovalue inline token"><input type="text" name="whitepaper" style="width:300px"><br>e.g.: http://www.google.com/paper (please include http:// or https://)</div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Twitter</b></h4></div>
        <div class="infovalue inline token"><input type="text" name="twiter" style="width:300px"><br>e.g.: http://www.twitter.com/your-name (please include http:// or https://)</div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Reddit</b></h4></div>
        <div class="infovalue inline token"><input type="text" name="reddit" style="width:300px"><br>e.g.: http://www.reddit.com/r/your-name (please include http:// or https://)</div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Slack</b></h4></div>
        <div class="infovalue inline token"><input type="text" name="slack" style="width:300px"><br>e.g.: https://your-team.slack.com</div>
      </div>
      <div class="infoitem">
        <div class="infolabel inline"><h4><b>Bitcointalk Announcement Thread</b></h4></div>
        <div class="infovalue inline token"><input type="text" name="btcannounce" style="width:300px"><br>e.g.: https://bitcointalk.org/your-topic</div>
      </div>
      </form>
